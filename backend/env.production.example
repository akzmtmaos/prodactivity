# Production Environment Variables Template
# Copy this to .env on your production server and fill in the values

# ============================================
# Django Settings
# ============================================
DEBUG=False
DJANGO_SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-MINIMUM-50-CHARACTERS
ALLOWED_HOSTS=yourdomain.site,www.yourdomain.site,api.yourdomain.site

# ============================================
# Database Configuration (from Hostinger)
# ============================================
DB_NAME=your_hostinger_db_name
DB_USER=your_hostinger_db_user
DB_PASSWORD=your_hostinger_db_password
DB_HOST=localhost
DB_PORT=5432

# ============================================
# CORS and CSRF Settings
# ============================================
CORS_ALLOWED_ORIGINS=https://yourdomain.site,https://www.yourdomain.site
CSRF_TRUSTED_ORIGINS=https://yourdomain.site,https://www.yourdomain.site

# ============================================
# Frontend URL
# ============================================
FRONTEND_URL=https://yourdomain.site

# ============================================
# Email Configuration (Gmail SMTP)
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-16-character-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# ============================================
# Email Verification Settings
# ============================================
EMAIL_VERIFICATION_REQUIRED=True
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1

# ============================================
# Site Settings
# ============================================
SITE_NAME=Prodactivity

# ============================================
# Hugging Face API Key (if using)
# ============================================
HUGGINGFACE_API_KEY=your-huggingface-api-key

# ============================================
# Supabase Configuration (if using)
# ============================================
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SYNC_ADMIN_TOKEN=your-sync-admin-token

